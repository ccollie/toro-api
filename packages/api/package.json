{
  "name": "@alpen/api",
  "version": "0.0.2",
  "description": "API library for Alpen BullMQ Monitor",
  "keywords": [
    "bullmq",
    "graphql",
    "api",
    "dashboard"
  ],
  "author": "clayton collie <collie.clayton@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ccollie/alpen.git",
    "directory": "packages/api"
  },
  "license": "MIT",
  "files": [
    "/dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "dist/index.d.ts": [
        "dist/index.d.ts"
      ],
      "*": [
        "dist/*",
        "dist/*/index.d.ts"
      ]
    }
  },
  "scripts": {
    "prepack": "yarn run build",
    "build": "yarn run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc --build tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "types": "tsc --declaration --emitDeclarationOnly",
    "replace-paths": "tsc-alias -p tsconfig.build.json"
  },
  "dependencies": {
    "@alpen/core": "^0.0.2",
    "@alpen/shared": "^0.0.2",
    "@envelop/apollo-server-errors": "^3.3.1",
    "@envelop/core": "^2.3.1",
    "@envelop/depth-limit": "^1.5.1",
    "@envelop/filter-operation-type": "^3.3.1",
    "@graphql-ez/plugin-altair": "^0.9.9",
    "@graphql-ez/plugin-automatic-persisted-queries": "^1.0.5",
    "@hapi/boom": "^9.1.4",
    "apollo-server-errors": "^3.3.1",
    "dataloader": "^2.1.0",
    "graphql": "16.4.0",
    "graphql-compose": "^9.0.8",
    "graphql-ez": "^0.14.1",
    "graphql-fields-list": "^2.2.4",
    "graphql-redis-subscriptions": "^2.4.2",
    "graphql-scalars": "^1.17.0",
    "graphql-subscriptions": "^2.0.0",
    "node-error-formatter": "^1.0.4",
    "pino": "^7.11.0"
  },
  "peerDependencies": {
    "@types/node": "*",
    "esbuild": "*"
  },
  "devDependencies": {
    "@envelop/types": "2.2.0",
    "@types/node": "^17.0.21",
    "jest": "^27.5.1",
    "tsc-alias": "^1.6.6",
    "typescript": "^4.6.4"
  }
}
