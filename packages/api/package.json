{
  "name": "@alpen/api",
  "version": "0.0.2",
  "description": "API library for Alpen BullMQ Monitor",
  "keywords": [
    "bullmq",
    "graphql",
    "api",
    "dashboard"
  ],
  "author": "clayton collie <collie.clayton@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ccollie/alpen.git",
    "directory": "packages/api"
  },
  "license": "MIT",
  "files": [
    "/dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "dist/index.d.ts": [
        "dist/index.d.ts"
      ],
      "*": [
        "dist/*",
        "dist/*/index.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "bob-ts-watch -i src",
    "prepack": "yarn run build",
    "build": "yarn run clean && yarn run types && yarn run compile",
    "clean": "rm -rf ./dist",
    "compile": "bob-ts -i src -f interop && yarn run types",
    "typecheck": "tsc --noEmit",
    "types": "tsc --emitDeclarationOnly",
    "gen-sdl": "ts-node ./scripts/gen-sdl.ts",
    "gen-types": "yarn run gen-sdl && npx graphql-codegen --config ../api/gql-codegen.yml"
  },
  "dependencies": {
    "@alpen/core": "^0.0.2",
    "@alpen/shared": "^0.0.2",
    "@envelop/apollo-server-errors": "^1.1.0",
    "@envelop/core": "^1.6.0",
    "@envelop/depth-limit": "^1.2.0",
    "@envelop/filter-operation-type": "^1.1.0",
    "@graphql-ez/plugin-altair": "^0.9.4",
    "@graphql-ez/plugin-automatic-persisted-queries": "^1.0.3",
    "@hapi/boom": "^9.1.4",
    "apollo-server-errors": "^3.3.0",
    "dataloader": "^2.0.0",
    "graphql": "16.0.0",
    "graphql-compose": "^9.0.4",
    "graphql-ez": "^0.13.4",
    "graphql-fields-list": "^2.2.4",
    "graphql-redis-subscriptions": "^2.4.0",
    "graphql-scalars": "^1.13.1",
    "graphql-subscriptions": "^1.2.1",
    "pino": "^6.13.2",
    "pino-pretty": "^5.1.3"
  },
  "peerDependencies": {
    "@types/node": "*",
    "esbuild": "*"
  },
  "devDependencies": {
    "@envelop/types": "^1.5.0",
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.2.2",
    "@graphql-codegen/typescript": "^2.3.1",
    "@graphql-codegen/typescript-operations": "^2.2.0",
    "@graphql-codegen/typescript-resolvers": "^2.4.0",
    "@types/node": "^16.11.4",
    "bob-ts": "^1.2.0",
    "bob-esbuild-cli": "^3.0.0",
    "jest": "^27.3.1",
    "typescript": "^4.4.4"
  }
}
