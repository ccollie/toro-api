{
  "name": "@alpen/koa",
  "version": "1.0.0",
  "description": "Koa adapter for Alpen",
  "types": "dist/index.d.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "private": true,
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs"
    },
    "./*": {
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.mjs"
    }
  },
  "scripts": {
    "build": "yarn run build:esm && yarn run build:cjs",
    "clean": "rm -rf ./dist && rm -rf .turbo",
    "build:esm": "bob-ts -i src -f esm -d dist/esm",
    "build:cjs": "bob-ts -i src -f cjs -d dist/cjs",
    "prepack": "bob-esbuild build",
    "test": "jest"
  },
  "keywords": [
    "bullmq",
    "Koa",
    "graphql"
  ],
  "author": "clayton collie",
  "license": "MIT",
  "peerDependencies": {
    "koa": "2.x",
    "koa-router": "7.x || 8.x || 9.x || 10.x"
  },
  "dependencies": {
    "@alpen/api": "^0.0.2",
    "@alpen/core": "^0.0.2",
    "@graphql-ez/koa": "^0.8.9",
    "@koa/router": "^10.1.1",
    "graphql": "16.3.0",
    "graphql-ez": "^0.14.1"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.8",
    "@types/node": ">=16.11.1",
    "bob-ts": "^1.2.2",
    "esbuild": "^0.14.27",
    "bob-esbuild-cli": "^3.0.1",
    "tsc-alias": "^1.4.5",
    "typescript": "^4.6.2"
  }
}
