{
  "name": "@alpen/koa",
  "version": "1.0.0",
  "description": "Koa adapter for Alpen",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "private": true,
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./dist",
    "compile": "bob-ts -i src -f interop",
    "prepack": "bob-esbuild build",
    "test": "jest"
  },
  "keywords": [
    "bullmq",
    "Koa",
    "graphql"
  ],
  "author": "clayton collie",
  "license": "MIT",
  "peerDependencies": {
    "koa": "2.x",
    "koa-router": "7.x || 8.x || 9.x || 10.x"
  },
  "dependencies": {
    "@alpen/api": "^0.0.2",
    "@alpen/core": "^0.0.2",
    "@graphql-ez/koa": "^0.8.8",
    "@koa/router": "^10.1.1",
    "graphql": "16.1.0",
    "graphql-ez": "^0.13.5"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.8",
    "@types/node": ">=16.11.1",
    "bob-ts": "^1.2.2",
    "esbuild": "^0.14.0",
    "bob-esbuild-cli": "^3.0.1",
    "tsc-alias": "^1.4.1",
    "typescript": "^4.5.2"
  }
}
