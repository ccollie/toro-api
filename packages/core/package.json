{
  "name": "@alpen/core",
  "version": "0.0.2",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Core implementation for Alpen",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ccollie/toro-api.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/ccollie/toro-api/issues"
  },
  "homepage": "https://github.com/ccollie/toro-api#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "dist/index.d.ts": [
        "dist/index.d.ts"
      ],
      "*": [
        "dist/*",
        "dist/*/index.d.ts"
      ]
    }
  },
  "typescript": {
    "definition": "./dist/index.d.ts"
  },
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "build": "yarn run compile && yarn run copyAssets",
    "compile": "bob-ts -i src -f interop",
    "dev": "bob-ts-watch -i src -f interop",
    "prepack": "bob-ts -i src -f interop",
    "copylua": "copyfiles -f ./src/commands/*.lua ./dist/commands",
    "copyConfig": "copyfiles -f ./src/config/*.json ./dist/src/config && copyfiles -f ./src/config/env/*.json ./dist/src/config/env",
    "copyPkg": "copyfiles -f ./package.json ./dist",
    "copyTemplates": "copyfiles -f ./src/notifications/email/templates/*.mjml ./dist/notifications/nodemailer/email/templates",
    "copyAssets": "yarn run copylua && yarn run copyTemplates && yarn run copyConfig",
    "test": "ts-jest",
    "test:coverage": "yarn run clean && jest --coverage",
    "clean": "rm -rf ./dist",
    "prettier": "prettier --config package.json src/**/*.ts"
  },
  "devDependencies": {
    "@babel/runtime": "^7.15.4",
    "@types/boom": "^7.3.1",
    "@types/handlebars-helpers": "^0.5.3",
    "@types/hapi__joi": "^17.1.7",
    "@types/html-to-text": "^8.0.1",
    "@types/lodash": "^4.14.173",
    "@types/ms": "^0.7.31",
    "@types/nanoid": "^2.1.0",
    "@types/nconf": "^0.10.0",
    "@types/node": "^14.17.17",
    "@types/nodemailer": "^6.4.4",
    "bob-ts": "^1.1.2",
    "copyfiles": "^2.4.1",
    "create-test-server": "^3.0.1",
    "jest": "^27.2.4",
    "jest-date-mock": "^1.0.8",
    "nock": "^13.1.3"
  },
  "dependencies": {
    "@alpen/shared": "^0.0.2",
    "@datadog/sketches-js": "^1.0.4",
    "@hapi/boom": "^9.1.4",
    "@stoplight/better-ajv-errors": "^0.2.0",
    "ajv": "^8.6.3",
    "bullmq": "^1.48.2",
    "core-js": "^3.18.1",
    "cronstrue": "^1.117.0",
    "date-fns": "^2.24.0",
    "debug": "^4.3.2",
    "denque": "^2.0.1",
    "dotenv": "^10.0.0",
    "emittery": "^0.9.2",
    "fnv-plus": "^1.3.1",
    "glob": "^7.2.0",
    "got": "^11.8.2",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "handlebars-utils": "^1.0.6",
    "hdr-histogram-js": "^2.0.1",
    "html-to-text": "^8.0.0",
    "ioredis": "^4.27.9",
    "joi": "^17.4.2",
    "jsep": "^0.4.0",
    "lodash-es": "^4.17.21",
    "lru-cache": "^6.0.0",
    "mjml": "4.10.3",
    "ms": "^2.1.3",
    "nanoid": "^3.1.28",
    "nconf": "^0.11.3",
    "node-error-formatter": "^1.0.4",
    "nodejs-snowflake": "^1.6.2",
    "nodemailer": "^6.6.5",
    "p-all": "^3.0.0",
    "p-map": "@4.0.0",
    "p-queue": "^6.6.2",
    "p-settle": "^4.1.1",
    "pino": "^6.13.2",
    "pino-pretty": "^5.1.3",
    "pretty-ms": "^7.0.1",
    "prexit": "^0.0.5",
    "redlock": "^4.2.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.2",
    "sketches-js": "^0.0.3",
    "slackify-markdown": "^4.3.0",
    "to-json-schema": "^0.2.5",
    "tslib": "^2.3.1"
  },
  "files": [
    "dist/**/*",
    "README",
    "LICENSE"
  ],
  "engines": {
    "node": ">= 16.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  }
}
