{
  "name": "alpen",
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "version": "0.0.2",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Alpen - API for a real-time interactive dashboard for BullMq",
  "bugs": {
    "url": "https://github.com/ccollie/alpen/issues"
  },
  "homepage": "https://github.com/ccollie/alpen#readme",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "rimraf \"**/{node_modules,dist,.next,coverage}\"",
    "pretty": "prettier --config package.json --write \"**/*.{ts,tsx,json,yaml,js,cjs,mjs,mdx,md}\"",
    "pretty:check": "prettier --check \"**/*.{ts,tsx,json,yaml,js,cjs,mjs,mdx}\"",
    "typecheck": "tsc --no-emit",
    "build:core": "yarn workspace @alpen/shared build && yarn workspace @alpen/core build && yarn workspace @alpen/api build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "alpen-testing": "file:./internal/testing",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "4.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.4",
    "jest-date-mock": "^1.0.8",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "core-js": "^3.19.1",
    "tslib": "^2.3.1"
  },
  "engines": {
    "node": ">=14.13.0"
  },
  "peerDependencies": {
    "@types/node": "*"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "resolutions": {
    "graphql": "16.1.0-experimental-stream-defer.6",
    "tsc-alias": "^1.5.0",
    "typescript": ">=4.5.3"
  },
  "packageManager": "yarn@3.1.0-rc.12"
}
