{
  "name": "toro-api",
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.2",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Toro-api - API for a real-time interactive dashboard for BullMq",
  "bugs": {
    "url": "https://github.com/ccollie/toro-api/issues"
  },
  "homepage": "https://github.com/ccollie/toro-api#readme",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "rimraf \"**/{node_modules,dist,.next,coverage}\"",
    "api": "yarn workspace @alpen/api",
    "core": "yarn workspace @alpen/core",
    "shared": "yarn workspace @alpen/shared",
    "express": "yarn workspace @alpen/express",
    "fastify": "yarn workspace @alpen/fastify",
    "pretty": "prettier --config package.json --write \"**/*.{ts,tsx,json,yaml,js,cjs,mjs,mdx,md}\"",
    "pretty:check": "prettier --check \"**/*.{ts,tsx,json,yaml,js,cjs,mjs,mdx}\"",
    "typecheck": "bob-esbuild tsc",
    "dev:core": "yarn workspace shared build && yarn workspace code build && yarn workspace api build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "bob-esbuild-cli": "^2.0.0",
    "bob-ts": "^1.1.1",
    "esbuild": "^0.13.4",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.4",
    "jest-date-mock": "^1.0.8",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "engines": {
    "node": ">=14.13.0"
  },
  "peerDependencies": {
    "@types/node": "*",
    "graphql": "*"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "resolutions": {
    "graphql": "15.4.0-experimental-stream-defer.1",
    "esbuild": ">=0.13.0",
    "typescript": ">=4.4.3"
  }
}
