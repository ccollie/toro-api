{
  "name": "toro-api",
  "version": "0.0.2",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Toro-api - API for a real-time interactive dashboard for BullMq",
  "bugs": {
    "url": "https://github.com/ccollie/toro-api/issues"
  },
  "homepage": "https://github.com/ccollie/toro-api#readme",
  "main": "./dist/src/server/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev:watch": "nodemon --exec 'npm run dev || exit 1'",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "build-ts": "ttsc",
    "compile": "del-cli dist && ttsc",
    "watch-ts": "ttsc -w",
    "dev": "NODE_ENV=development ts-node --compiler ttypescript ./src/server/index.ts",
    "gen-sdl": "ts-node --compiler ttypescript ./scripts/gen-sdl.ts",
    "gen-types": "npm run gen-sdl && npx graphql-codegen --config gql-codegen.yml",
    "serve": "node dist/src/server/index.js",
    "serve-debug": "nodemon --inspect dist/server/index.js",
    "copylua": "copyfiles -f ./src/server/commands/*.lua ./dist/src/server/commands",
    "copyConfig": "copyfiles -f ./src/server/config/*.json ./dist/src/server/config && copyfiles -f ./src/server/config/env/*.json ./dist/src/server/config/env",
    "copyPkg": "copyfiles -f ./package.json ./dist",
    "copyTemplates": "copyfiles -f src/server/notifications/email/templates/*.mjml ./dist/src/server/notifications/nodemailer/templates",
    "copyAssets": "npm run copylua && npm run copyTemplates && npm run copyConfig",
    "build": "tsc && npm run copyAssets",
    "test:coverage": "npm run clean && jest --coverage && npm run demo:test && npm run clean",
    "clean": "rm -rf ./dist",
    "demo:consumer": "NODE_ENV=example node dist/src/example/consumer.js",
    "demo:producer": "NODE_ENV=example node dist/src/example/producer.js",
    "demo": "concurrently -k \"npm run demo:consumer\" \"npm run demo:producer\"",
    "prettier": "prettier --config package.json src/**/*.ts"
  },
  "devDependencies": {
    "@babel/runtime": "^7.14.6",
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/typescript": "^1.22.3",
    "@graphql-codegen/typescript-operations": "^1.18.2",
    "@graphql-codegen/typescript-resolvers": "^1.19.4",
    "@types/boom": "^7.3.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "4.17.12",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/html-to-text": "^6.0.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/morgan": "^1.9.2",
    "@types/ms": "^0.7.31",
    "@types/nanoid": "^2.1.0",
    "@types/nconf": "^0.10.0",
    "@types/node": "^14.17.0",
    "@types/nodemailer": "^6.4.2",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "concurrently": "^6.2.0",
    "copyfiles": "^2.4.1",
    "create-test-server": "^3.0.1",
    "del-cli": "^4.0.0",
    "eslint": "^7.29.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "graphql-compose": "^9.0.1",
    "jest": "^27.0.5",
    "jest-date-mock": "^1.0.8",
    "nock": "^13.1.0",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.4",
    "typescript-transform-paths": "^3.0.0",
    "unirand": "^2.11.1"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.2",
    "@stoplight/better-ajv-errors": "^0.1.1",
    "ajv": "^8.6.0",
    "apollo-server-express": "^2.25.2",
    "body-parser": "^1.19.0",
    "bullmq": "^1.37.1",
    "chalk": "^4.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "core-js": "^3.15.1",
    "cronstrue": "^1.114.0",
    "dataloader": "^2.0.0",
    "date-fns": "^2.22.1",
    "debug": "^4.3.1",
    "denque": "^1.5.0",
    "emittery": "^0.9.2",
    "express": "^4.17.1",
    "fnv-plus": "^1.3.1",
    "glob": "^7.1.7",
