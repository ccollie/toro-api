    "p-queue": "^6.6.2",
    "p-settle": "^4.1.1",
    "pretty-ms": "^7.0.1",
    "prexit": "^0.0.5",
    "query-string": "^6.14.1",
    "redlock": "^4.2.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "serve-static": "^1.14.1",
    "sketches-js": "^0.0.3",
    "slackify-markdown": "^4.1.0",
    "tslib": "^2.2.0",
    "winston": "^3.3.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  }
}
