{
  "name": "alpen",
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "version": "0.0.2",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Alpen - API for a real-time interactive dashboard for BullMq",
  "bugs": {
    "url": "https://github.com/ccollie/alpen/issues"
  },
  "homepage": "https://github.com/ccollie/alpen#readme",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "turbo run clean && rimraf \"**/{node_modules,dist,.next,coverage,.turbo}\"",
    "pretty": "prettier --config package.json --write \"**/*.{ts,tsx,json,yaml,js,cjs,mjs,mdx,md}\"",
    "pretty:check": "prettier --check \"**/*.{ts,tsx,json,yaml,js,cjs,mjs,mdx}\"",
    "typecheck": "tsc --no-emit",
    "build": "turbo run build",
    "build:core": "yarn workspace @alpen/shared build && yarn workspace @alpen/core build && yarn workspace @alpen/api build",
    "gql-schema": "node -r ts-node/register ./scripts/gen-schema.ts",
    "gql-gen": "yarn run gql-gen:server && yarn run gql-gen:client",
    "gql-gen:client": "graphql-codegen --config ./gql-codegen-client.yml",
    "gql-gen:server": "graphql-codegen --config ./gql-codegen-server.yml",
    "gql-gen:full": "yarn run gql-schema && yarn run gql-gen"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typed-document-node": "^2.2.8",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@graphql-codegen/typescript-resolvers": "^2.6.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "fs-extra": "^10.0.0",
    "graphql-tag.macro": "^2.0.1",
    "jest": "^27.5.1",
    "jest-date-mock": "^1.0.8",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.4",
    "turbo": "latest",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "core-js": "^3.21.0",
    "tslib": "^2.3.1"
  },
  "engines": {
    "node": ">=14.13.0"
  },
  "peerDependencies": {
    "@types/node": "*"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "resolutions": {
    "typescript": ">=4.6.2"
  },
  "packageManager": "yarn@1.22.18"
}
