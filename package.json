{
  "name": "toro-api",
  "version": "0.0.1",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Toro-api - API for a real-time interactive dashboard for BullMq",
  "main": "./dist/src/server/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev:watch": "nodemon --exec 'yarn run dev || exit 1'",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "dev": "NODE_ENV=development ts-node ./src/server/index.ts",
    "serve": "node dist/src/server/index.js",
    "serve-debug": "nodemon --inspect dist/server/index.js",
    "copylua": "copyfiles -f ./src/server/commands/*.lua ./dist/src/server/commands",
    "copyConfig": "copyfiles -f ./src/server/config/*.json ./dist/src/server/config && copyfiles -f ./src/server/config/env/*.json ./dist/src/server/config/env",
    "copyPkg": "copyfiles -f ./package.json ./dist",
    "copyTemplates": "copyfiles -f src/server/notifications/email/templates/*.mjml ./dist/src/server/notifications/nodemailer/templates",
    "copyAssets": "npm run copylua && npm run copyTemplates && npm run copyConfig",
    "build": "tsc && npm run copyAssets",
    "test:coverage": "npm run clean && jest --coverage && npm run demo:test && npm run clean",
    "clean": "rm -rf ./dist",
    "demo:consumer": "NODE_ENV=example node dist/src/example/consumer.js",
    "demo:producer": "NODE_ENV=example node dist/src/example/producer.js",
    "demo": "concurrently -k \"npm run demo:consumer\" \"npm run demo:producer\"",
    "prettier": "prettier --config package.json src/**/*.ts"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "4.17.11",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/html-to-text": "^6.0.0",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/morgan": "^1.9.2",
    "@types/ms": "^0.7.31",
    "@types/nanoid": "^2.1.0",
    "@types/nconf": "^0.10.0",
    "@types/node": "^14.14.28",
    "@types/nodemailer": "^6.4.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "create-test-server": "^3.0.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8",
    "nock": "^13.0.11",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "unirand": "^2.11.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@hapi/boom": "^9.1.2",
    "@stoplight/better-ajv-errors": "^0.0.4",
    "ajv": "^8.1.0",
    "apollo-server-express": "^2.23.0",
    "body-parser": "^1.19.0",
    "bullmq": "^1.18.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "core-js": "^3.10.1",
    "cronstrue": "^1.111.0",
    "date-fns": "^2.21.1",
    "debug": "^4.3.1",
    "denque": "^1.5.0",
    "emittery": "^0.8.1",
    "express": "^4.17.1",
    "fnv-plus": "^1.3.1",
    "glob": "^7.1.6",
    "got": "^11.8.2",
    "graphql": "^14.7.0",
    "graphql-compose": "^7.25.1",
    "graphql-fields-list": "^2.2.3",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.3",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "handlebars-utils": "^1.0.6",
    "hdr-histogram-js": "^2.0.1",
    "html-to-text": "^6.0.0",
    "ioredis": "^4.26.0",
    "joi": "^17.4.0",
    "jsep": "^0.4.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lru-cache": "^6.0.0",
    "mjml": "4.9.0",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "nanoid": "^3.1.22",
    "nconf": "^0.11.2",
    "node-error-formatter": "^1.0.4",
    "nodejs-snowflake": "^1.5.1",
    "nodemailer": "^6.5.0",
    "p-all": "^3.0.0",
