{
  "name": "toro-api",
  "version": "0.0.1",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Toro-api - API for a real-time interactive dashboard for BullMq",
  "main": "./dist/src/server/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev:watch": "nodemon --exec 'yarn run dev || exit 1'",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve": "node dist/src/server/index.js",
    "serve-debug": "nodemon --inspect dist/server/index.js",
    "copylua": "copyfiles -f ./src/server/commands/*.lua ./dist/src/server/commands",
    "copyConfig": "copyfiles -f ./src/server/config/*.json ./dist/src/server/config && copyfiles -f ./src/server/config/env/*.json ./dist/src/server/config/env",
    "copyPkg": "copyfiles -f ./package.json ./dist",
    "copyTemplates": "copyfiles -f src/server/notifications/email/templates/*.mjml ./dist/src/server/notifications/nodemailer/templates",
    "copyAssets": "yarn run copylua && yarn run copyTemplates && yarn run copyConfig",
    "build": "tsc && yarn run copyAssets",
    "test:coverage": "yarn run clean && jest --coverage && yarn run demo:test && yarn run clean",
    "clean": "rm -rf ./dist",
    "demo:consumer": "NODE_ENV=example node dist/src/example/consumer.js",
    "demo:producer": "NODE_ENV=example node dist/src/example/producer.js",
    "demo": "concurrently -k \"yarn run demo:consumer\" \"yarn run demo:producer\"",
    "prettier": "prettier --config package.json src/**/*.ts"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "4.17.9",
    "@types/handlebars-helpers": "^0",
    "@types/hapi__joi": "^17.1.6",
    "@types/html-to-text": "^5",
    "@types/jest": "^26.0.19",
    "@types/joi": "^14.3.4",
    "@types/lodash": "^4.14.162",
    "@types/morgan": "^1.9.2",
    "@types/ms": "^0.7.31",
    "@types/nanoid": "^2.1.0",
    "@types/nconf": "^0.10.0",
    "@types/node": "^13.13.38",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "create-test-server": "^3.0.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8",
    "nock": "^13.0.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.5",
    "unirand": "^2.11.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@hapi/boom": "^9.1.1",
    "ajv": "^7.0.2",
    "apollo-server-express": "^2.19.1",
    "better-ajv-errors": "^0.6.7",
    "body-parser": "^1.19.0",
    "bullmq": "^1.12.3",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "core-js": "^3.8.1",
    "cors": "^2.8.5",
    "cronstrue": "^1.106.0",
    "date-fns": "^2.16.1",
    "debug": "^4.3.1",
    "denque": "^1.4.1",
    "emittery": "^0.7.2",
    "express": "^4.17.1",
    "fnv-plus": "^1.3.1",
    "glob": "^7.1.6",
    "got": "^11.8.1",
    "graphql": "^14.7.0",
    "graphql-compose": "^7.23.0",
    "graphql-fields-list": "^2.2.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.2",
    "handlebars": "^4.7.7",
