    "nconf": "^0.10.0",
    "node-cron": "^2.0.3",
    "node-error-formatter": "^1.0.4",
    "nodemailer": "^6.4.2",
    "notevil": "^1.3.3",
    "p-all": "^2.1.0",
    "p-map": "^2.1.0",
    "p-queue": "^6.2.1",
    "p-reduce": "^2.1.0",
    "p-series": "^2.1.0",
    "p-settle": "^3.1.0",
    "pretty-ms": "^5.1.0",
    "prexit": "^0.0.5",
    "probability-distributions": "^0.9.1",
    "query-string": "^6.8.3",
    "serve-static": "^1.14.1",
    "sketches-js": "^0.0.3",
    "winston": "^3.2.1",
    "ws": "^7.2.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  }
}
