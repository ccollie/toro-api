{
  "name": "toro-api",
  "version": "0.0.1",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Toro-api - API for a real-time interactive dashboard for BullMq",
  "main": "./dist/toro.min.js",
  "types": "./dist/toro.d.ts",
  "scripts": {
    "docs": "typedoc --out docs src",
    "dev:client": "yarn run tslint && webpack --mode development",
    "dev:watch": "nodemon --exec 'yarn run dev || exit 1'",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve": "node dist/src/server/index.js",
    "serve-debug": "nodemon --inspect dist/server/index.js",
    "copylua": "copyfiles -f ./src/server/commands/*.lua ./dist/src/server/commands",
    "copyConfig": "copyfiles -f ./src/server/config/*.json ./dist/src/server/config && copyfiles -f ./src/server/config/env/*.json ./dist/src/server/config/env",
    "copyPkg": "copyfiles -f ./package.json ./dist",
    "copyTemplates": "copyfiles -f ./src/server/notifications/nodemailer/templates/*.mjml ./dist/src/server/notifications/nodemailer/templates",
    "copyAssets": "yarn run copylua && yarn run copyTemplates && yarn run copyConfig",
    "build": "tsc && yarn run copyAssets",
    "build:client": "yarn run tslint && webpack --mode production",
    "test:client": "yarn run clean && jest && yarn run demo:test && yarn run clean",
    "test:coverage": "yarn run clean && jest --coverage && yarn run demo:test && yarn run clean",
    "clean": "rm -rf ./dist",
    "demo:test": "yarn run build && cd demo && yarn install && yarn run add-self && yarn test",
    "demo:consumer": "NODE_ENV=example node src/example/consumer.js",
    "demo:producer": "NODE_ENV=example node src/example/producer.js",
    "demo": "concurrently -k \"yarn run demo:consumer\" \"yarn run demo:producer\"",
    "prettier": "prettier --config package.json src/**/*.ts"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^16.0.12",
    "@types/ioredis": "^4.16.0",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.4",
    "@types/nodemailer": "^6.4.0",
    "@types/webpack": "^4.41.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.30.0",
    "@typescript-eslint/parser": "^2.33.0",
    "concurrently": "^5.1.0",
    "copyfiles": "^2.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "jest-date-mock": "^1.0.8",
    "prettier": "^2.0.5",
    "ts-jest": "^25.0.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.9.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typedoc": "^0.17.6",
    "typescript": "^3.9.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@graphql-toolkit/file-loading": "^0.10.7",
    "@graphql-toolkit/schema-merging": "^0.10.7",
    "@hapi/boom": "^7.4.2",
    "@hapi/joi": "17.1.0",
    "apollo-server-express": "^2.13.0",
    "body-parser": "^1.19.0",
    "bullmq": "^1.8.7",
    "chalk": "^4.0.0",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "latest",
    "cookie-parser": "^1.4.4",
    "core-js": "^3.4.4",
    "cors": "^2.8.5",
    "cronstrue": "^1.84.0",
    "date-fns": "^2.12.0",
    "debug": "^4.1.1",
    "double-ended-queue": "^2.1.0-0",
    "emittery": "^0.6.0",
    "express": "^4.17.1",
    "fnv-plus": "^1.3.1",
    "glob": "^7.1.6",
    "got": "^10.2.1",
    "graphql": "^15.0.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.2",
    "graphql-type-json": "^0.3.1",
    "handlebars": "^4.7.3",
    "hdr-histogram-js": "^1.2.0",
    "ioredis": "^4.16.3",
