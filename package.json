{
  "name": "alpen",
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "version": "0.0.2",
  "author": "clayton collie <collie.clayton@gmail.com>",
  "license": "MIT",
  "description": "Alpen - API for a real-time interactive dashboard for BullMq",
  "bugs": {
    "url": "https://github.com/ccollie/alpen/issues"
  },
  "homepage": "https://github.com/ccollie/alpen#readme",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "rimraf \"**/{node_modules,dist,.next,coverage}\"",
    "pretty": "prettier --config package.json --write \"**/*.{ts,tsx,json,yaml,js,cjs,mjs,mdx,md}\"",
    "pretty:check": "prettier --check \"**/*.{ts,tsx,json,yaml,js,cjs,mjs,mdx}\"",
    "typecheck": "tsc --no-emit",
    "build:core": "yarn workspace @alpen/shared build && yarn workspace @alpen/core build && yarn workspace @alpen/api build",
    "gen-schema": "node -r ts-node/register ./scripts/gen-schema.ts",
    "generate": "yarn run generate:server && yarn run generate:client",
    "generate:client": "graphql-codegen --config ./gql-codegen-client.yml",
    "generate:server": "graphql-codegen --config ./gql-codegen-server.yml",
    "generate:full": "yarn run gen-schema && yarn run generate"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.0",
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/typescript": "^2.4.3",
    "@graphql-codegen/typescript-operations": "^2.3.0",
    "@graphql-codegen/typescript-resolvers": "^2.5.0",
    "@graphql-codegen/typed-document-node": "^2.2.3",
    "@graphql-codegen/typescript-react-apollo": "^3.2.5",
    "graphql-tag.macro": "^2.0.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.5.1",
    "jest-date-mock": "^1.0.8",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsc-alias": "^1.5.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "core-js": "^3.21.0",
    "tslib": "^2.3.1"
  },
  "engines": {
    "node": ">=14.13.0"
  },
  "peerDependencies": {
    "@types/node": "*"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "resolutions": {
    "tsc-alias": "^1.5.0",
    "typescript": ">=4.5.4"
  },
  "packageManager": "yarn@3.1.0-rc.12"
}
