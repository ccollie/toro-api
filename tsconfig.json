{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "esnext",
      "dom",
      "es6"
    ],
    "declaration": true,
    "diagnostics": true,
    "strict": false,
    "alwaysStrict": true,
    "composite": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": ["node_modules"],
  "files": [],
  "baseUrl": "./",
  "paths": {
    "@alpen/api": ["packages/api/index.ts"],
    "@alpen/core": ["packages/core/index.ts"],
    "@alpen/express": ["packages/express/src/index.ts"],
    "@alpen/fastify": ["packages/fastify/src/index.ts"],
    "@alpen/hapi": ["packages/hapi/src/index.ts"],
    "@alpen/koa": ["packages/koa/src/index.ts"],
    "@alpen/shared": ["packages/shared/src/index.ts"],
    "@alpen/*": ["packages/*/src"],
    "tslib" : ["node_modules/tslib/tslib.d.ts"]
  }
}
