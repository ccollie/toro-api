{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": [
      "es2020",
      "esnext",
      "dom",
      "es6"
    ],
    "declaration": true,
    "diagnostics": true,
    "strict": false,
    "alwaysStrict": true,
    "composite": true,
    "incremental": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@alpen/api": ["packages/api/src"],
      "@alpen/api/*": ["packages/api/src/*"],
      "@alpen/core": ["packages/core/src/index.ts"],
      "@alpen/core/*": ["packages/core/src/*/index.ts"],
      "@alpen/express": ["packages/express/src/index.ts"],
      "@alpen/fastify": ["packages/fastify/src/index.ts"],
      "@alpen/hapi": ["packages/hapi/src/index.ts"],
      "@alpen/koa": ["packages/koa/src/index.ts"],
      "@alpen/shared/*": ["packages/shared/src/*"],
      "@alpen/shared": ["packages/shared/src/index.ts"],
      "@alpen/*": ["packages/*/src/index.ts"],
      "alpen-testing/*": ["internal/testing/src/*"],
      "alpen-testing": ["internal/testing/src/index.ts"],
      "tslib" : ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "exclude": ["node_modules", "**/dist", "**/coverage", "**/.next"],
  "include": ["packages", "examples", "internal", "jest.config.js"]
}
