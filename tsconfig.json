{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "strict": false,
    "alwaysStrict": true,
    "composite": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@alpen/api/*": ["packages/api/src/*"],
      "@alpen/api": ["packages/api/src/index.ts"],
      "@alpen/core/*": ["packages/core/src/*/index.ts"],
      "@alpen/core": ["packages/core/src/index.ts"],
      "@alpen/core/hosts": ["packages/core/src/hosts/index.ts"],
      "@alpen/express": ["packages/express/src/index.ts"],
      "@alpen/fastify": ["packages/fastify/src/index.ts"],
      "@alpen/hapi": ["packages/hapi/src/index.ts"],
      "@alpen/koa": ["packages/koa/src/index.ts"],
      "@alpen/shared/lib": ["./packages/shared/src/lib/index.ts"],
      "@alpen/shared/*": ["./packages/shared/src/*"],
      "@alpen/demo-base": ["examples/base/src/index.ts"],
      "@alpen/demo-base/*": ["examples/base/src/*/index.ts"],
      "@alpen/demo-cli/*": ["examples/cli/src/*"],
      "alpen-testing/*": ["internal/testing/src/*"],
      "alpen-testing": ["internal/testing/src/index.ts"],
      "~/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules", "**/dist", "**/coverage", "**/.next"],
  "include": ["packages", "examples", "internal", "jest.config.js"]
}
